{
  "designSystem": {
    "name": "SoraPixel — VSCO-Inspired Editorial Design",
    "version": "1.0",
    "description": "A classy, editorial magazine-style design inspired by VSCO's website. High contrast black/white with warm gold accents, large condensed typography, and editorial photo grids.",

    "colors": {
      "primary": {
        "black": "#0a0a0a",
        "white": "#ffffff",
        "offWhite": "#f7f7f5",
        "warmGray": "#e8e5df",
        "lightGray": "#f0efed"
      },
      "accent": {
        "gold": "#8b7355",
        "goldLight": "#c4a67d",
        "goldBg": "#f5f0e8",
        "teal": "#2dd4bf",
        "coral": "#f87171"
      },
      "text": {
        "primary": "#0a0a0a",
        "secondary": "#4a4a4a",
        "muted": "#8c8c8c",
        "inverse": "#ffffff",
        "inverseMuted": "#a0a0a0"
      },
      "surfaces": {
        "light": "#fafaf8",
        "card": "#ffffff",
        "dark": "#0a0a0a",
        "darkElevated": "#141414",
        "darkCard": "#1a1a1a"
      }
    },

    "typography": {
      "fontFamilies": {
        "display": "Syne — bold editorial headings, tight tracking",
        "body": "DM Sans — clean readable body text",
        "mono": "JetBrains Mono — code/technical details"
      },
      "scale": {
        "heroDisplay": {
          "mobile": { "size": "2.75rem", "lineHeight": "1.0", "letterSpacing": "-0.03em", "weight": "800", "textTransform": "uppercase" },
          "tablet": { "size": "4.5rem", "lineHeight": "0.95", "letterSpacing": "-0.04em", "weight": "800" },
          "desktop": { "size": "6.5rem", "lineHeight": "0.92", "letterSpacing": "-0.04em", "weight": "800" }
        },
        "sectionTitle": {
          "mobile": { "size": "2rem", "lineHeight": "1.05", "letterSpacing": "-0.02em", "weight": "700", "textTransform": "uppercase" },
          "desktop": { "size": "3.5rem", "lineHeight": "1.0", "letterSpacing": "-0.03em", "weight": "700" }
        },
        "cardTitle": {
          "mobile": { "size": "1.125rem", "lineHeight": "1.3", "weight": "700" },
          "desktop": { "size": "1.375rem", "lineHeight": "1.25", "weight": "700" }
        },
        "body": {
          "size": "1rem",
          "lineHeight": "1.65",
          "weight": "400"
        },
        "small": {
          "size": "0.8125rem",
          "lineHeight": "1.5",
          "weight": "500",
          "letterSpacing": "0.08em",
          "textTransform": "uppercase"
        },
        "caption": {
          "size": "0.75rem",
          "lineHeight": "1.5",
          "weight": "500"
        }
      }
    },

    "spacing": {
      "sectionPadding": {
        "mobile": { "x": "1.25rem", "y": "4rem" },
        "tablet": { "x": "2rem", "y": "5rem" },
        "desktop": { "x": "3rem", "y": "6rem" }
      },
      "maxWidth": "1400px",
      "containerPadding": {
        "mobile": "1rem",
        "tablet": "2rem",
        "desktop": "3rem"
      }
    },

    "grid": {
      "heroGrid": {
        "description": "Full viewport hero with centered content overlay",
        "mobile": "1fr",
        "desktop": "Full bleed with content overlay"
      },
      "photoGrid": {
        "description": "Masonry-like editorial photo grid with mixed aspect ratios",
        "mobile": "2 columns, equal size",
        "tablet": "3 columns, mixed heights",
        "desktop": "4 columns, some spanning 2 cols/rows"
      },
      "featureGrid": {
        "description": "Mixed-size feature cards like VSCO's content sections",
        "mobile": "1 column stacked",
        "tablet": "2 columns",
        "desktop": "3 columns with varying spans"
      }
    },

    "borderRadius": {
      "none": "0",
      "sm": "0.25rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "xl": "1rem"
    },

    "shadows": {
      "none": "none",
      "subtle": "0 1px 3px rgba(0,0,0,0.04)",
      "card": "0 4px 20px rgba(0,0,0,0.06)",
      "elevated": "0 12px 40px rgba(0,0,0,0.12)"
    },

    "animations": {
      "easing": {
        "smooth": "cubic-bezier(0.4, 0, 0.2, 1)",
        "spring": "cubic-bezier(0.34, 1.56, 0.64, 1)",
        "editorial": "cubic-bezier(0.22, 1, 0.36, 1)"
      },
      "duration": {
        "fast": "200ms",
        "normal": "400ms",
        "slow": "600ms",
        "reveal": "800ms"
      }
    },

    "sections": [
      {
        "id": "navbar",
        "type": "fixed",
        "background": "glass (transparent with blur)",
        "style": "Minimal — logo left, nav links right, clean border bottom"
      },
      {
        "id": "hero",
        "type": "fullViewportHeight",
        "background": "Dark gradient with subtle texture",
        "content": "Large uppercase headline, subtitle, pill CTA button, scroll indicator",
        "responsive": "Text scales down, maintains full height on mobile"
      },
      {
        "id": "showcase-grid",
        "type": "editorialPhotoGrid",
        "background": "white",
        "heading": "Section label + large uppercase title",
        "gridPattern": "Mixed sizes — some images span 2 cols, varying heights",
        "responsive": "Collapses to 2-col on mobile, scrollable row on small screens"
      },
      {
        "id": "features-split",
        "type": "splitLayout",
        "background": "offWhite",
        "left": "Large editorial typography",
        "right": "Feature cards grid with images and overlaid labels",
        "responsive": "Stacks vertically on mobile"
      },
      {
        "id": "styles-showcase",
        "type": "cardGrid",
        "background": "white",
        "content": "Photography style cards with gradient backgrounds and labels",
        "responsive": "2-col on mobile, 3-col tablet, full grid desktop"
      },
      {
        "id": "how-it-works",
        "type": "threeColumnText",
        "background": "offWhite",
        "content": "Three columns with step number, title, description",
        "responsive": "Single column on mobile with dividers"
      },
      {
        "id": "links-bar",
        "type": "horizontalLinks",
        "background": "white with border",
        "content": "Horizontal row of navigation links"
      },
      {
        "id": "dark-cta",
        "type": "fullBleedDark",
        "background": "#0a0a0a",
        "content": "Large split typography spanning full width, product imagery",
        "responsive": "Text stacks on mobile, maintains impact"
      },
      {
        "id": "footer",
        "type": "darkFooter",
        "background": "#0a0a0a",
        "content": "Large brand statement, navigation links, copyright"
      }
    ]
  }
}
